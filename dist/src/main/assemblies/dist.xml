<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>escor</id>

    <formats>
        <format>dir</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/main/structure</directory>
            <outputDirectory/>
            <excludes>
                <exclude>bin/**</exclude>
                <exclude>sbin/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/structure/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/structure/sbin</directory>
            <outputDirectory>sbin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib/explorer/lib</outputDirectory>
            <directoryMode>0755</directoryMode>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <useStrictFiltering>true</useStrictFiltering>
            <excludes>
                <exclude>io.bigconnect:web-war</exclude>

                <!-- No Bolt server -->
<!--                <exclude>io.bigconnect:bolt-server</exclude>-->
<!--                <exclude>io.netty:netty-transport-native-epoll</exclude>-->
<!--                <exclude>io.bigconnect:cypher-lab</exclude>-->
            </excludes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib/explorer/webapp</outputDirectory>
            <directoryMode>0755</directoryMode>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>io.bigconnect:web-war:war</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
