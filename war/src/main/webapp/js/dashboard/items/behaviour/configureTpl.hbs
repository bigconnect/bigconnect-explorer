<section>
  <label>Behaviour</label>
  <select class="search custom-select form-control">
    {{#if loading}}
      <option value="">Se incarca...</option>
    {{else}}
      {{#if searches }}
        <option value="">Choose Behaviour</option>
      {{else}}
        <option value="">No Behaviours available</option>
      {{/if}}

      {{#each searches}}
        <option value="{{ id }}" {{#if selected}}selected{{/if}}>{{ name }}</option>
      {{/each}}
    {{/if}}
  </select>
</section>

<section class="sort" style="display:none">
  <label>Sort</label>
  <div class="sort-fields"></div>
</section>

<section class="limit" style="display:none">
  <label>Limit Results</label>
  <select class="form-control">
    {{#each limits}}
    <option value="{{ value }}" {{#if selected}}selected{{/if}}>{{ name }}</option>
    {{/each}}
  </select>
</section>

