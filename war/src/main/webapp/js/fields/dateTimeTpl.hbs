<input type="text"
  data-provide="datepicker"
  placeholder="{{today}}"
  value="{{dateString}}"
  pattern="\d{4}-\d+-\d+"
  required="required" 
  class="date form-control">
<input type="text"
  placeholder="{{todayTime}}"
  pattern="\d+:\d+"
  required="required" 
  class="bootstrap-timepicker timepicker form-control">
